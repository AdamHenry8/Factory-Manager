
@{
    ViewBag.Title = "ShiftList";
}
<style>
    #shifts {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #shifts td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #shifts tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #shifts tr:hover {
            background-color: #ddd;
        }

        #shifts th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }
</style>
<h2>Shift List</h2>
<br />
<h4><a href="/shift/AddShift">Click here To Add A Shift</a></h4><br />
<table id="shifts">
    <tr>
        <th>Shift ID</th>
        <th>Shift Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Employees in this shift</th>
        
    </tr>
    @foreach (var shift in ViewBag.shifts)
    {
<tr>
    <td>@shift.ID</td>
    <td>@shift.ShiftDate</td>
    <td>@shift.StartTime</td>
    <td>@shift.EndTime</td>
    @if(shift.shiftEmployees != null)
    {
        <td>
            @foreach (var item in shift.shiftEmployees)
            {
                <ul>
                    <li style="list-style-type: none" ;><a href="/Employee/EditEmployee/@item.ID">@item.FirstName @item.LastName</a> </li>
                </ul>
            }
    </td>
    } else { <td>This Shift has no employees yet</td>}


</tr>
}
</table> <br />

<a href="/Login/Index">Press Here To Log Out</a> <br />

<h6>@ViewBag.NumOfActs</h6>
<div>
@Html.Raw(HttpContext.Current.Session["fullName"])
</div>

